@page
@model WebApi.Pages.Note.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>

<br />

<div className="row justify-content-center">


    @if (Model.Note.ToList().Count() <= 0)
    {
        <h2>there is no information to consult</h2>
    }
    @foreach (var item in Model.Note)
    {
        <div className="col">
                <div className="card border p-3 m-2 b-2" style={{cursor: "pointer" }}>
                    <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                    <p>@Html.DisplayFor(modelItem => item.Descriptions)</p>
                    <p>@Html.DisplayFor(modelItem => item.Date)</p>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </div>
        </div>
        <br/>
    }

</div>

